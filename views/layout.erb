<!DOCTYPE HTML>
<html>
  <head>
    <title>FFXIV</title>
    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/text.css" />
    <link rel="stylesheet" href="/960.css" />
    <link rel="stylesheet" href="/jquery-ui-1.8.15.custom.css" />
    <link rel="stylesheet" href="/style.css" />
    <script type="text/javascript" src="/jquery-1.5.1.min.js"></script>
    <script type="text/javascript" src="/jquery-ui-1.8.15.custom.min.js"></script>
  </head>
  <body>
    <div id="main" class="container_12">
      <div id="header">
        <% if current_user %>
          <div id="title" class="grid_6"><%= @title %></div>
          <div id="userinfo" class="grid_6">
            <strong>You</strong>: <%= current_user.name %>; <strong>Character</strong>: <%= current_character.name %>
          </div>
          <div class="clear"></div>
        <% else %>
          <div id="title" class="grid_12"><%= @title %></div>
        <% end %>
        <div class="clear"></div>
      </div>
      <div class="grid_12">
        <div id="content">
          <%= yield %>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </div>
</body>
</html>
